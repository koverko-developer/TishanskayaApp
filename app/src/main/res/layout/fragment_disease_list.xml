<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    tools:context="com.example.mobiapp.tishanskayaapp.fragments.DiseaseListFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerDisease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:elevation="2dp">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/disease.rel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/pause_gradient"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                app:srcCompat="@drawable/ic_test" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:text="Тест"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>



</FrameLayout>
