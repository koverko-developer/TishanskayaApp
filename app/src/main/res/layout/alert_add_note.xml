<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/circle_image"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alet_add_note_select_button"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_date_range_black_24dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/alert_add_note.date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/relativeLayout4"
                android:layout_toRightOf="@+id/relativeLayout4"
                android:text="дата"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/circle_image"
                android:gravity="center">

                <ImageView
                    android:id="@+id/alert_add_note_time_img"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/alert_add_note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/relativeLayout5"
                android:layout_toRightOf="@+id/relativeLayout5"
                android:text="время"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:text="Введите описание:"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <MultiAutoCompleteTextView
        android:id="@+id/alert_add_note_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:hint="Что произошло..." />

    <Button
        android:id="@+id/alert_add_note_btn_add"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Добавить"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

</LinearLayout>