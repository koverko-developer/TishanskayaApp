<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="25dp"
        app:arcColor="@color/grey_200"
        app:progressColor="@color/common_google_signin_btn_text_dark_default"
        seekarc:arcColor="@color/one_gradient"
        seekarc:arcWidth="25dp"
        seekarc:enabled="false"
        seekarc:progress="0"
        seekarc:progressColor="@color/circle_color_3"
        seekarc:progressWidth="25dp"
        seekarc:rotation="180"
        seekarc:startAngle="0"
        seekarc:sweepAngle="181"
        seekarc:touchInside="false" />

    <com.triggertrap.seekarc.SeekArc
        android:id="@+id/seekArcTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:padding="25dp"
        app:arcColor="@color/grey_200"
        app:progressColor="@color/common_google_signin_btn_text_dark_default"
        seekarc:arcColor="@color/circle_color_1"
        seekarc:arcWidth="25dp"
        seekarc:enabled="false"
        seekarc:progress="0"
        seekarc:progressColor="@color/circle_center"
        seekarc:progressWidth="25dp"
        seekarc:rotation="0"
        seekarc:startAngle="0"
        seekarc:sweepAngle="181"
        seekarc:touchInside="false" />

    <TextView
        android:id="@+id/time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="НАЖМИ СЮДА" />

    <ImageView
        android:id="@+id/circle_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_play_arrow_black_24dp"
        android:cropToPadding="false" />

    <ImageView
        android:id="@+id/oval_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        seekarc:srcCompat="@drawable/oval" />

</RelativeLayout>