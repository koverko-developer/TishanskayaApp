<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircularView">
        <attr name="item_count" format="integer" />
        <attr name="item_icons" format="reference" />
        <attr name="item_titles" format="reference" />
        <attr name="item_colors" format="reference" />
        <attr name="center_color" format="reference" />
        <attr name="center_icon" format="reference" />
        <attr name="inner_radius" format="dimension" />
        <attr name="outer_radius" format="dimension" />
        <attr name="title_color" format="reference" />
        <attr name="title_size" format="dimension" />
        <attr name="title_center_size" format="dimension" />
        <attr name="title_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ScratchView">
        <attr name="overlayColor" format="color"/>
        <attr name="revealSize" format="dimension"/>
        <attr name="antiAlias" format="boolean"/>
        <attr name="scratchable" format="boolean"/>
        <attr name="scratchDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CheckBoxGroup">
        <!-- The id of the child radio button that should be checked by default
             within this radio group. -->
        <attr name="checkedButton" format="integer"/>

    </declare-styleable>
    <!-- Default RadioButton style. -->
    <attr name="checkBoxStyle" format="reference"/>

    <declare-styleable name="FillableLoader">
        <attr name="fl_fillColor"
            format="color"/>
        <attr name="fl_strokeColor"
            format="color"/>
        <attr name="fl_strokeWidth"
            format="dimension"/>
        <attr name="fl_originalWidth"
            format="integer"/>
        <attr name="fl_originalHeight"
            format="integer"/>
        <attr name="fl_strokeDrawingDuration"
            format="integer"/>
        <attr name="fl_fillDuration"
            format="integer"/>
        <attr name="fl_fillPercentage"
            format="integer"/>
        <attr name="fl_clippingTransform"
            format="enum">
            <enum name="plain"
                value="0"/>
            <enum name="spikes"
                value="1"/>
            <enum name="rounded"
                value="2"/>
            <enum name="waves"
                value="3"/>
            <enum name="squares"
                value="4"/>
            <enum name="bites"
                value="5"/>
        </attr>
    </declare-styleable>

</resources>
